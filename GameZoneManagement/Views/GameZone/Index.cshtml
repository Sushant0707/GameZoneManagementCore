@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use your custom layout
}

<!-- Hero Section -->
<section class="bg-dark text-white text-center py-5">
    <div class="container">
        <h1 class="display-4">Welcome to GameZone Management</h1>
        <p class="lead">Manage users, games, and your entire gaming hub in one place.</p>
        <a href="/GameZone/Login" class="btn btn-primary btn-lg mt-3">Get Started</a>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">Player Management</h5>
                        <p class="card-text">Register, update, and manage player profiles seamlessly.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">Admin Control</h5>
                        <p class="card-text">Access advanced tools to oversee users, scores, and reports.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">Secure Login</h5>
                        <p class="card-text">Multi-role login for admins, players, and staff with security.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section class="py-5 text-center">
    <div class="container">
        <h2 class="mb-4">Why Choose GameZone?</h2>
        <p class="lead">Our platform offers an all-in-one solution to manage your game zones, from user registration to gameplay tracking. Built with modern technologies and a user-first design.</p>
        <a href="/GameZone/Register" class="btn btn-outline-primary mt-3">Register Now</a>
    </div>
</section>
